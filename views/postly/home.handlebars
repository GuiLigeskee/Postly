<div class="home-header">
  {{#if search}}
    <h1>Buscas por: <span>{{search}}</span></h1>
    {{#if postlysQty}}
      <p>Encontrados <span>{{postlysQty}}</span> postlys</p>
    {{else}}
      <p>Nenhum resultado para o termo <span>{{search}}</span></p>
    {{/if}}
  {{else}}
    <h1>Conheça alguns <span>Postlys</span></h1>
  {{/if}}
  <h1>Todos os posts</h1>
  <form action="/" method="GET">
    <input type="text" name="search" placeholder="Está buscando por algo?" />
    <input type="submit" class="btn" value="Buscar" />
  </form>
  <div class="order-container">
    <span>Ordenar por:</span>
    <form action="/" method="GET">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="new" />
      <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>
    <form action="/" method="GET">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="old" />
      <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>
    <a href="/">Limpar</a>
  </div>
</div>
<div class="postlys-container">
  {{#each postlys}}
    <figure>
      <blockquote>
        "{{this.title}}"
      </blockquote>
      <p>{{this.description}}</p>
      <figcaption>por <span>{{this.User.name}}</span></figcaption>
    </figure>
  {{/each}}
</div>